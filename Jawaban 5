class jam:
    getjam = 0
    getmenit = 0
    getdetik = 0

jam = jam()

j = int(input('Jam Menunjukan pukul : '))
getmenit = int(input('Menit berapa : '))
getdetik = int(input('Detik berapa : '))

jam.getjam=int(j)
jam.getmenit=int(getmenit)
jam.getdetik=int(getdetik)

print("Jam ",jam.getjam,":",jam.getmenit,":",jam.getdetik)
